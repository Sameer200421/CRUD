<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head.ejs') %>
</head>
<body>
    <div class="body2">
        <div class="container1">
            <h2>Verify OTP</h2>
            <form action="/verify-otp" method="POST">
                <input type="hidden" name="email" value="<%= email %>"> <!-- Pass email to identify user -->
                <input type="hidden" name="stage" value="signup"> <!-- Distinguish between sign-in and sign-up -->
